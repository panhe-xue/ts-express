{
  "compilerOptions":{
    "lib": ["es5", "es2015", "es2016", "es2017"],
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "bin/",
    "moduleResolution": "classic",
    "experimentalDecorators": true,
    "skipLibCheck": true,
		"allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "typings",
    "bin"
  ]
}